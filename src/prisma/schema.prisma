generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(cuid())
  login    String   @unique
  receipts Receipt[]
}

model Receipt {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  fileUrl   String?
  date      DateTime
  tags      Tag[]     @relation("ReceiptTags")
  items     Item[]
  createdAt DateTime  @default(now())
}

model Item {
  id        String   @id @default(cuid())
  name      String
  receiptId String
  receipt   Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
}

model Tag {
  id       String     @id @default(cuid())
  name     String     @unique
  receipts Receipt[]  @relation("ReceiptTags")
}
