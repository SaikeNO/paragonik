// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  login    String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  sessions Session[]
  receipts Receipt[]
  tags     Tag[]
}

model Receipt {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  fileUrl   String
  date      DateTime
  tags      Tag[]     @relation("ReceiptTags")
  items     Item[]
  createdAt DateTime  @default(now())
}

model Item {
  id        String   @id @default(cuid())
  name      String
  receiptId String
  receipt   Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
}

model Tag {
  id       String    @id @default(cuid())
  name     String
  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  receipts Receipt[] @relation("ReceiptTags")
  
  @@unique([name, userId])
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
